{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md",
        "*.test.js",
        "*.test.tsx"
      ]
    },
    "create": {
      "license": "MIT",
      "author": "kenny wang <wowohoo@qq.com>",
      "repository": {
        "type": "git",
        "url": "https://github.com/uiwjs/uiw.git"
      }
    },
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "exact": true,
      "forcePublish": true,
      "message": "chore(release): %s"
    },
    "bootstrap": {
      "npmClient": "yarn",
      "yarnClientArgs": [
        "--no-yarn-lock",
        "--no-package-lock"
      ],
      "forceLocal": true
    }
  }
}
